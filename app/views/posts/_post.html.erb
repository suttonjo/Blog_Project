<div id="<%= dom_id post %>">
  <p class="title is-size-1 has-text-centered mt-4">
    <%= post.title %>
  </p>
  
  <p class="ml-2 is-size-4">Author:
  <%= @post.account.username %>
  </p>

  <% if post.image.present? %>
  <span class="is-align-self-center">
    <%= image_tag(url_for(post.image), style:"height: 400px;") %>
  </span>
  <% end %>

  <p class="is-size-4 m-4 footer">
    <%= post.body %>
  </p>
</div>

<div class="column is-one-third" style="width:400px;margin-inline: auto;" >
    <p class="has-text-centered" style="color: red"><%= alert %></p>
    <h1 class="title has-text-centered m-6">Sign In</h1>
    
    <%= form_with url: signin_path do |form| %>

        <div class="field" >
            <%= form.label :email, class: "label" %>
            <div class="control">
                <%= form.text_field :email, placeholder: "johnsmith@gmail.com", class: "input" %>
            </div>
        </div>
        
        <div class="field">
            <%= form.label :password, class: "label" %>
            <div class="control">
                <%= form.password_field :password, placeholder: "password", class: "input" %>
            </div>
        </div>

        <div class="field">
            <div class="control has-text-centered mt-5">
                <%= form.submit "Sign In", class: "button is-link" %>
            </div>
        </div>
    <% end  %> 
</div>